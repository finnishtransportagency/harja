{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "toimenpiteet": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "toimenpide": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "nimi": { "type": "string" },
              "toimenpidekoodi": { "type": "string" },
              "luotu": { "type": "string", "format": "date-time" },
              "muokattu": { "type": "string", "format": "date-time" },
              "poistettu": { "type": "boolean" }
            },
            "required": ["id", "nimi", "toimenpidekoodi", "poistettu"]
          }
        },
        "required": ["toimenpide"]
      }
    }
  },
  "required": ["toimenpiteet"]
}
