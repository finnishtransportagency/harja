{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "paikkauskohteet": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [],
        "properties": {
          "harjaId": {
            "type": "integer",
            "multipleOf": 1
          },
          "ulkoinenId": {
            "type": "integer",
            "multipleOf": 1,
            "description": "Paikkuskohteen yksilöivä numero. Uniikki urakan sisällä."
          },
          "paikkauskohdeId": {
            "type": "string"
          },
          "poistettu": {
            "type": "boolean"
          },
          "paikkaustyomenetelma": {
            "type": "string",
            "enum": [
              "AB-paikkaus levittäjällä",
              "PAB-paikkaus levittäjällä",
              "SMA-paikkaus levittäjällä",
              "KT-valuasfalttipaikkaus (KTVA)",
              "Konetiivistetty reikävaluasfalttipaikkaus (REPA)",
              "Sirotepuhalluspaikkaus (SIPU)",
              "Sirotepintauksena tehty lappupaikkaus (SIPA)",
              "Urapaikkaus (UREM/RREM)",
              "Jyrsintäkorjaukset (HJYR/TJYR)",
              "Kannukaatosaumaus",
              "Avarrussaumaus",
              "Sillan kannen päällysteen päätysauman korjaukset",
              "Reunapalkin ja päällysteen välisen sauman tiivistäminen",
              "Reunapalkin liikuntasauman tiivistäminen",
              "Käsin tehtävät paikkaukset pikapaikkausmassalla",
              "AB-paikkaus käsin",
              "PAB-paikkaus käsin",
              "Muu päällysteiden paikkaustyö",
              "Massapintaus"
            ]
          },
          "tierekisteriosoitevali": {
            "$ref": "#/definitions/tierekisteriosoitevali-kaista-ja-ajorata"
          },
          "reunat": {
            "type": "integer",
            "multipleOf": 1
          },
          "ajourat": {
            "type": "integer",
            "multipleOf": 1
          },
          "ajouravalit": {
            "type": "integer",
            "multipleOf": 1
          },
          "keskisaumat": {
            "type": "integer",
            "multipleOf": 1
          },
          "alkupvm": {
            "type": "string",
            "format": "date",
            "description": "Paikkauksen aloituspäivä."
          },
          "loppupvm": {
            "type": "string",
            "format": "date",
            "description": "Paikkauksen lopetuspäivä."
          },
          "leveys": {
            "type": "number",
            "description": "Paikkauksen leveys metreissä"
          },
          "raekoko": {
            "type": "integer",
            "enum": [
              5,
              8,
              11,
              16,
              22,
              31
            ]
          },
          "kuulamylly": {
            "type": "string",
            "enum": [
              "AN5",
              "AN7",
              "AN10",
              "AN14",
              "AN19",
              "AN30",
              "AN22"
            ]
          },
          "massamaara": {
            "type": ["number", "null"],
            "description": "Yksikkö: t."
          },
          "pinta-ala": {
            "type": ["number", "null"],
            "description": "Yksikkö: neliömetri."
          },
          "juoksumetri": {
            "type": ["number", "null"],
            "description": "Yksikkö: juoksumetri"
          },
          "kpl": {
            "type": ["number", "null"],
            "description": "Yksikkö: kappale."
          },
          "massamenekki": {
            "type": ["number", "null"],
            "description": "Yksikkö: kg/m2."
          }
        }
      }
    }
  },
  "definitions": {
    "tierekisteriosoitevali-kaista-ja-ajorata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tienumero",
        "aosa",
        "aet",
        "losa",
        "let"
      ],
      "properties": {
        "karttapaivamaara": {
          "type": "string",
          "format": "date"
        },
        "tienumero": {
          "type": "integer",
          "multipleOf": 1,
          "description": "Tien numero, jolle tieosoiteväli kohdistuu."
        },
        "aosa": {
          "type": "integer",
          "multipleOf": 1,
          "description": "Tieosoitevälin alun tieosa"
        },
        "aet": {
          "type": "integer",
          "multipleOf": 1,
          "description": "Etäisyys alkuosan sisällä"
        },
        "losa": {
          "type": "integer",
          "multipleOf": 1,
          "description": "Tieosoitevälin lopun tieosa"
        },
        "let": {
          "type": "integer",
          "multipleOf": 1,
          "description": "Etäisyys loppuosan sisällä"
        },
        "ajorata": {
          "type": "integer",
          "enum": [
            0,
            1,
            2
          ]
        },
        "kaista": {
          "type": "integer",
          "enum": [
            1,
            11,
            12,
            13,
            21,
            22,
            23,
            14,
            15,
            16,
            17,
            18,
            19,
            24,
            25,
            26,
            27,
            28,
            29,
            31
          ]
        }
      }
    }
  }
}
