  "properties": {
    "lahettaja": {
      "id": "urn:harja/lahettaja",
      "type": "object",
      "additionalProperties": false,
      "required": true,
      "properties": {
        "jarjestelma": {
          "id": "urn:harja/lahettaja/jarjestelma",
          "type": "string",
          "required": true
        },
        "organisaatio": {
          "id": "urn:harja/koordinaattisijainti",
          "type": "object",
          "additionalProperties": false,
          "$ref": "file:resources/api/schemas/entities/organisaatio.schema.json",
          "required": true
        }
      }
    },
    "viestintunniste": {
      "id": "urn:harja/viestintunniste",
      "type": "object",
      "additionalProperties": false,
      "$ref": "file:resources/api/schemas/entities/tunniste.schema.json",
      "required": true
    },
    "lahetysaika": {
      "id": "urn:harja/lahetysaika",
      "type": "string",
      "format": "date-time",
      "required": true
    }
  }
}